@using Core.Services.Movies.Models

@code {

    [Parameter]
    public MovieListItem Content { get; set; }

}

<Card>
    
    <MudGrid >
        <MudItem xs="1">
                <MudAvatar Image="@(Content.Poster)" Square="true"></MudAvatar>
            </MudItem>
        <MudItem xs="11">
            <MudText Typo="Typo.body1">@Content.Title</MudText>
            <MudText Typo="Typo.body2">@Content.Year</MudText>
        </MudItem>
    </MudGrid>
</Card>