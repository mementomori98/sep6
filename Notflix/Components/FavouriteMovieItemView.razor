@using Core.Services.Movies.Models


@code {
    [Parameter]
    public FavouriteMovieItem Content { get; set; }

}

<Card>
    <MudGrid Class="d-flex flex-xs-column flex-sm-row">
        <MudItem xs="4" md="2" lg="3" Class="d-flex pa-4 flex-grow-1">
            <img src="@(Content.Poster)" asp-append-version="true" width="200px" />
        </MudItem>
        <MudItem xs="7" md="9" lg="8" Class="pa-4">
            <MudItem Class="d-flex justify-space-between px-1 flex-column flex-sm-row">
                <MudText Typo="Typo.h5">@Content.Title</MudText>
                <MudRating Size="Size.Large" />
            </MudItem>
            <MudText Typo="Typo.body2">@Content.Plot</MudText>
        </MudItem>
        <MudItem xs="1" Class="d-flex flex-sm-column justify-end">
            <MudIconButton Icon="@Icons.Material.Filled.ThumbUp" Color="Color.Success" Size="Size.Large" />
            <MudIconButton Icon="@Icons.Material.Filled.ThumbDown" Color="Color.Dark" Size="Size.Large" />
            <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Large" />
        </MudItem>
    </MudGrid>
</Card>

