@using Core.Domain.Toplists.Models
@inherits AuthBase

@code {

    [Parameter]
    public ToplistModel Toplist { get; set; }
    
    [Parameter]
    public bool DisplayAuthor { get; set; }

}

<MudGrid Spacing="1">
    <MudItem xs="12" Class="d-flex justify-space-between">
        <MudText Typo="Typo.h5">@Toplist.Name</MudText>
        @if (DisplayAuthor)
        {
            <MudText Typo="Typo.h6" Class="grey-text normal mr-2">By: @Toplist.Username</MudText>
        }
    </MudItem>
    <MudItem xs="12" Class="d-flex">
        @foreach (var movie in Toplist.Items.Take(5))
        {
            <Avatar Href="@(movie.ImageUrl)" NumberOfItems="@Toplist.Items.Take(5).Count()"/>
        }
    </MudItem>
</MudGrid>