@using Core.Domain.Toplists.Models
@inherits AuthBase

@code {

    [Parameter]
    public ToplistModel Toplist { get; set; }

}

<MudGrid>
    <MudItem xs="12">
        <MudText>@Toplist.Name</MudText>
    </MudItem>
    <MudItem xs="12">
        <MudGrid Spacing="1">
            @foreach (var movie in Toplist.Items.Take(3))
            {
                <MudItem xs="4">
                    <Avatar Href="@(movie.ImageUrl)"/>
                </MudItem>
            }
        </MudGrid>
    </MudItem>
</MudGrid>